<p id="randomTerm"></p>

<button onclick="getRandomTerm()">Generate Theme</button>

<script>
const terms = ["MYTHICAL CREATURES", "STEAMPUNK", "FUTURISTIC", "HISTORICAL FIGURES", "MAGICAL", "UNDERWATER", "WESTERN", "ADVENTURERS", "ICY", "DYSTOPIAN", "INSECTS", "CIRCUS/CARNIVAL", "DREAMY", "NOIR", "PIRATES", "DESERT", "DESSERT", "VIKINGS", "DANCERS", "MEDICAL", "CANDY", "FANCY", "JAZZ", "SPACE", "EVIL", "SPOOKY", "NATURE", "FOOD", "SKULLS", "MILITARY", "CASUAL", "FALL", "SUMMER", "WINTER", "SPRING", "CHRISTMAS", "EASTER", "VALENTINE'S DAY", "ST. PATRICK'S DAY", "MARVEL", "DC COMICS", "NINJAS", "ROBOTS", "SUPERHEROES", "ANIMALS", "ALIENS", "VILLAINS", "SPORTS", "ANIME", "MOVIES", "TELEVISION", "STRIPES", "GLOWING", "NEON", "DARK", "LIGHT", "CAMOUFLAGE", "LLAMAS", "FISH", "BIRDS", "PEELYS", "FISHSTICK", "JONESYS", "CATS", "FURRYS", "FUN HAIR", "GLASSES", "GOGGLES", "ARMOR", "DRESSES", "HELMETS", "WINGS", "HOODIES", "SUITS", "BIG HATS", "HOODS", "PAJAMAS", "ANIMAL SUITS/COSTUMES", "MASKS", "BLUE", "SILVER", "RED", "GOLD", "RAINBOW", "GREEN", "BLACK", "PURPLE", "PINK", "WHITE", "YELLOW", "ORANGE", "BIG BOYS", "BUFF DUDES/DUDETTES", "HOT GIRLS", "HOT GUYS", "BADASS GIRLS", "STAR WARS", "VIDEO GAMES", "REAL PEOPLE", "BALD", "WET/GOOEY", "FLOWERS", "UNDERCOVER", "POLKA DOTS", "OMBRE", "CHECKERED/PLAID", "GEOMETRIC", "ANIMAL PRINT", "ABSTRACT", "BIRTHDAY", "FAIRY TALE"];

    function getRandomTerm() {
        // Check if the array is not empty
        if (terms.length > 0) {
            // Generate a random index
            const randomIndex = Math.floor(Math.random() * terms.length);

            // Get the term at the random index
            const randomTerm = terms[randomIndex];

            // Display the random term
            document.getElementById('randomTerm').innerText = `${randomTerm}`;
        } else {
            // Display a message if the array is empty
            document.getElementById('randomTerm').innerText = 'No themes available';
        }
    }
</script>

