import SwiftUI

struct ContentView: View {
    var body: some View {
        ZStack {
            // Custom blue background
            Color(hex: "1a47cf").edgesIgnoringSafeArea(.all)
            
            // Content
            VStack {
                // Image at the top with padding
                Image("logo-white") // Replace "logo-white" with the actual name of your white logo image asset
                    .resizable()
                    .scaledToFit()
                    .frame(maxWidth: 600) // Set the maximum width
                    .padding(30) // Add 10px padding on all sides
                    .padding(.top, 20) // Additional top padding if needed

                Spacer()

                // Blank body
                Text("Your Content Here")
                    .foregroundColor(.white)
                    .padding()

                Spacer()
            }
        }
    }
}

struct ContentView_Previews: PreviewProvider {
    static var previews: some View {
        ContentView()
            .previewDevice("iPhone SE (3rd generation)")
    }
}

extension Color {
    init(hex: String) {
        var hexSanitized = hex.trimmingCharacters(in: .whitespacesAndNewlines)
        hexSanitized = hexSanitized.replacingOccurrences(of: "#", with: "")

        var rgb: UInt64 = 0

        Scanner(string: hexSanitized).scanHexInt64(&rgb)

        let red = Double((rgb & 0xFF0000) >> 16) / 255.0
        let green = Double((rgb & 0x00FF00) >> 8) / 255.0
        let blue = Double(rgb & 0x0000FF) / 255.0

        self.init(red: red, green: green, blue: blue)
    }
}
